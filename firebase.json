{
	"database": {
		"rules": "database.rules.json"
	},
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"functions": {
		"predeploy": [ "yarn workspaces run lint", "yarn workspaces run build" ],
		"postdeploy": [ "yarn workspaces run postdeploy" ]
	},
	"hosting": {
		"public": "build",
		"predeploy": [ "yarn build" ],
		"ignore": [ "**./history", "**./history/**", "firebase.json", "**/.*", "**/node_modules/**" ]
	},
	"storage": {
		"rules": "storage.rules"
	}
}
